{% extends "portlet-body.htm.j2" %}
{% block portlet_body %}
<div class="table-responsive">
    <div id="model-glossary-report-table-toolbar" class='columns'>
        <table id="notice_summary_table"
               data-side-pagination="server"
               data-toggle="table"
               data-url="/api_btstptbl/projectgroup/{{ slug }}/notices"
               data-page-size="5"
               data-pagination="true"
               data-search="true"
               data-sort-name='created_at'
               data-sort-order="desc"
               >
            <thead>
                <tr>
                    <th data-field="title" class="col-md-6" data-formatter="btstrp_notice_linker"><i class="fa fa-briefcase"></i> {{_('제목')}} </th>
                    <th data-field="writer.email"><i class="fa fa-user"></i> {{_('작성자')}}</th>
                    <th data-field="created_at" data-formatter="btstrp_commonf_datetime"><i class="fa fa-calendar"></i> {{_('작성일자')}}</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<script>
var btstrp_notice_linker = function(value, row, _) {
    var url = Flask.url_for('board._notice_view', {post_id: row.id});
    return '<a data-ajax="true" href="' + url + '">' + value + '</a>';
};
</script>
{% endblock %}