{% extends "portlet-body.htm.j2" %}
{% block portlet_body %}
<div class="scroller" data-always-visible="1" data-rail-visible1="0" data-handle-color="#D7DCE2">
{% if posts|count %}
{% for o in posts.limit(7) %}
    <div class="general-item-list">
        <div class="item">
            <div class="item-body">
                <a href="{{ url_for('board.post_view', post_id=o.id)}}">{{o.title}}</a>
                <br/>
                {{ o.summary or "" }}
            </div>
            <div class="item-head">
                <div class="item-details">
                    <span class="item-label"><i class="fa fa-user"></i> {{ o.writer }}</span>
                    <span class="item-label"><i class="fa fa-clock-o"></i> {{ o.created_at| naturalday }}</span>
                    {%- if o.is_new() %}
                    <span class="item-status"><span class="badge badge-empty badge-danger"></span></span>
                    {%- endif %}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% else %}
    <div class="text-center">
        <div class="font-blue-oleo">{{_('등록된 글이 없습니다.')}}</div>
    </div>
{% endif %}
</div>
{% endblock %}